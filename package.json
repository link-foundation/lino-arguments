{
  "name": "lino-arguments",
  "version": "0.2.4",
  "description": "A setup of Links Notation Environment (lenv) + yargs to support easy configuration of CLI apps",
  "type": "module",
  "main": "./src/index.js",
  "exports": {
    ".": "./src/index.js"
  },
  "scripts": {
    "test": "node --test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:file-size": "node scripts/check-file-size.mjs",
    "check": "npm run lint && npm run format:check && npm run check:file-size",
    "prepare": "husky || true",
    "changeset": "changeset",
    "changeset:version": "node scripts/changeset-version.mjs",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status --since=origin/main",
    "changeset:validate": "node scripts/validate-changeset.mjs",
    "changeset:create": "node scripts/create-manual-changeset.mjs"
  },
  "keywords": [
    "lino",
    "arguments",
    "cli",
    "yargs",
    "environment",
    "links-notation",
    "config"
  ],
  "author": "",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/link-foundation/lino-arguments.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "getenv": "^2.0.0",
    "links-notation": "^0.11.2",
    "lino-env": "^0.2.6",
    "yargs": "^17.7.2"
  },
  "peerDependencies": {
    "@dotenvx/dotenvx": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "@dotenvx/dotenvx": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "test-anywhere": "^0.6.0"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
