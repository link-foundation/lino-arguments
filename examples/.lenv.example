# Example .lenv file
# This demonstrates the Links Notation environment format
# Use `: ` (colon-space) instead of `=` for key-value pairs

# Database configuration
DATABASE_URL: postgresql://localhost:5432/myapp
DATABASE_POOL_SIZE: 10

# API Keys
API_KEY: your_api_key_here
SECRET_KEY: your_secret_key_here

# Application settings
APP_NAME: My Application
APP_VERSION: 1.0.0
APP_PORT: 3000
APP_HOST: localhost

# Feature flags
FEATURE_ANALYTICS: true
FEATURE_DEBUG: false

# External services
REDIS_URL: redis://localhost:6379
ELASTICSEARCH_URL: http://localhost:9200

# File paths
LOG_DIR: ./logs
DATA_DIR: ./data
UPLOAD_DIR: ./uploads
